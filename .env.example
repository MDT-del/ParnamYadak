# تنظیمات محیط برای اپلیکیشن پرنام یدک
# این فایل را کپی کرده و نام آن را به .env تغییر دهید

# تنظیمات اصلی Flask
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-here

# تنظیمات دیتابیس
DATABASE_URL=postgresql://parnamyadak_user:parnamyadak_pass@localhost:5432/parnamyadak_db

# تنظیمات Redis
REDIS_URL=redis://localhost:6379/0

# تنظیمات امنیتی
SESSION_COOKIE_SECURE=true
WTF_CSRF_SSL_STRICT=true

# تنظیمات لاگ
LOG_TO_STDOUT=true

# تنظیمات Sentry (اختیاری)
# SENTRY_DSN=your-sentry-dsn-here

# تنظیمات ربات تلگرام
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram-bot/webhook

# تنظیمات ایمیل (اختیاری)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password