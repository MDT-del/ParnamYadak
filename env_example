# -----------------------------
# امنیت و تنظیمات اصلی
# کلید امنیتی برای اپلیکیشن Flask
SECRET_KEY=your-super-secret-key-here
# کلید لایسنس (در صورت نیاز)
LICENSE_SECRET_KEY=your-super-secret-license-key-2024
# محیط اجرا: production یا development
FLASK_ENV=production
# سطح لاگ: INFO یا ERROR
LOG_LEVEL=INFO

# -----------------------------
# تنظیمات دیتابیس (برای PostgreSQL)
# نام دیتابیس
POSTGRES_DB=parnamyadak
# نام کاربری دیتابیس
POSTGRES_USER=parnamyadak
# رمز عبور دیتابیس
POSTGRES_PASSWORD=yourpassword
# آدرس اتصال SQLAlchemy (در داکر معمولاً نام سرویس دیتابیس را به جای localhost قرار دهید)
DATABASE_URL=postgresql://parnamyadak:yourpassword@db:5432/parnamyadak
# اگر از SQLite استفاده می‌کنید، مقدار زیر را جایگزین کنید:
# DATABASE_URL=sqlite:///app.db

# -----------------------------
# کش (اختیاری)
# آدرس Redis (در داکر معمولاً نام سرویس redis را به جای localhost قرار دهید)
REDIS_URL=redis://redis:6379/0

# -----------------------------
# تنظیمات ایمیل (برای ارسال اعلان و بازیابی رمز)
DEVELOPER_EMAIL=developer@example.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# -----------------------------
# تنظیمات ربات تلگرام
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# آدرس API پنل برای ارتباط ربات (در صورت نیاز)
PANEL_API_BASE_URL=https://panel.parnamyadak.ir/api
# فعال‌سازی webhook برای ربات تلگرام (True/False)
USE_WEBHOOK=False
# آدرس کامل webhook (در صورت استفاده)
WEBHOOK_URL=https://panel.parnamyadak.ir/bot/webhook
# مسیر webhook روی سرور
WEBHOOK_PATH=/webhook
# هاست webhook
WEBHOOK_HOST=0.0.0.0
# پورت webhook
WEBHOOK_PORT=8080

# -----------------------------
# مانیتورینگ و رهگیری خطا (اختیاری)
# اگر از Sentry استفاده می‌کنید مقدار DSN را وارد کنید
SENTRY_DSN=your-sentry-dsn-here

# -----------------------------
# سایر تنظیمات (در صورت نیاز)
# لیست دامنه‌های مجاز برای دسترسی به پنل (با کاما جدا کنید)
# ALLOWED_HOSTS=panel.parnamYadak.ir,localhost,127.0.0.1
# کوکی سشن فقط روی HTTPS فعال باشد
SESSION_COOKIE_SECURE=True  
# فقط از طریق HTTPS قابل دسترسی باشد
WTF_CSRF_SSL_STRICT=true
# کوکی سشن فقط از طریق HTTP قابل دسترسی باشد
# SESSION_COOKIE_HTTPONLY=True
# سیاست SameSite برای کوکی سشن
# SESSION_COOKIE_SAMESITE=Lax
# تنظیمات لاگ
LOG_TO_STDOUT=true
# فعال‌سازی حالت دیباگ Flask (اختیاری)
FLASK_DEBUG=0
# -----------------------------
# کلیدهای API یا سرویس‌های خارجی (در صورت نیاز)
# EXTERNAL_API_KEY=your-api-key 